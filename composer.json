{
    "name": "bitvalencia/laravel-helpers",
    "description": "Global helpers for Laravel projects",
    "keywords": [
        "bitvalencia",
        "laravel-helpers",
        "laravel",
        "helpers"
    ],
    "homepage": "https://github.com/bitvalencia/laravel-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Iván García",
            "email": "ivan@bitvalencia.com",
            "homepage": "https://github.com/ivang11",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/support": "^6.0|^7.0",
        "illuminate/validation": "^6.0|^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "files": [
            "src/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
